<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_app_logo_big" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="5">

        <EditText
            android:id="@+id/SignUpActivity_UsernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:hint="@string/username_string"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:visibility="visible" />

        <EditText
            android:id="@+id/SignUpActivity_EmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:hint="@string/email_string"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:visibility="visible" />

        <EditText
            android:id="@+id/SignUpActivity_PasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:hint="@string/sign_up_password_string"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:visibility="visible" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/SignUpActivity_StudentRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/student_string" />

            <RadioButton
                android:id="@+id/SignUpActivity_TutorRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tutor_string" />
        </RadioGroup>

        <TextView
            android:id="@+id/SignUpActivity_ErrorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="#F44336"
            android:visibility="invisible" />

        <Button
            android:id="@+id/SignUpActivity_SignUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="64dp"
            android:layout_marginBottom="8dp"
            android:backgroundTintMode="src_atop"
            android:longClickable="false"
            android:onClick="SignUpButton_ClickListener"
            android:text="@string/sign_up_button_string"
            android:visibility="visible" />

    </LinearLayout>
</LinearLayout>